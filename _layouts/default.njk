        <meta name="title" content="Every Vote Counts - UVM Chapter">
        <meta name="description" content="As a chapter of EVC, we're a student led coalition focused on voter registration, education, and reform.">

        <!-- Open Graph / Facebook -->
        <meta property="og:type" content="website">
        <meta property="og:url" content="https://www.uvm.vote/">
        <meta property="og:title" content="Every Vote Counts - UVM Chapter">
        <meta property="og:description" content="As a chapter of EVC, we're a student led coalition focused on voter registration, education, and reform.">
        <meta property="og:image" content="assets/images/UVM-every-vote-counts-preview.png">

        <!-- Twitter -->
        <meta property="twitter:card" content="summary_large_image">
        <meta property="twitter:url" content="https://www.uvm.vote/">
        <meta property="twitter:title" content="Every Vote Counts - UVM Chapter">
        <meta property="twitter:description" content="As a chapter of EVC, we're a student led coalition focused on voter registration, education, and reform.">
        <meta property="twitter:image" content="https://www.uvm.vote/assets/images/UVM-every-vote-counts-preview.png">

